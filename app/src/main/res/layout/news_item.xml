<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/medium_spacing">

    <TextView
        android:id="@+id/article_title_textView"
        style="@style/WrapContent"
        android:textColor="@color/web_link"
        tools:text="Title:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/small_spacing">

        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/hashtag_section_textView"
            style="@style/WrapContent"
            android:textStyle="bold"
            android:text="@string/hash_tag"
            tools:text="#" />

        <TextView
            android:layout_marginTop="@dimen/mini_spacing"
            android:id="@+id/article_section_textView"
            style="@style/WrapContent"
            tools:text="Section:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/small_spacing">

        <TextView
            android:id="@+id/article_author_textView"
            style="@style/WrapContent"
            android:textStyle="bold"
            android:layout_weight="1"
            tools:text="Author:"/>

        <TextView
            android:id="@+id/article_date_textView"
            style="@style/WrapContent"
            android:layout_weight="1"
            tools:text="Date:" />
    </LinearLayout>
</LinearLayout>